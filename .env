# UltraFiltration Configuration
# Set to "true" on the Raspberry Pi, "false" for desktop development/testing
UF_HARDWARE_CONNECTED=true

# Display settings
UF_DISPLAY_FULLSCREEN=true

# Cursor visibility: true = show cursor (dev), false = hide cursor (Pi touchscreen)
UF_SHOW_CURSOR=false

# Logging level: DEBUG, INFO, WARNING, ERROR
UF_LOG_LEVEL=INFO
